<Window x:Class="variant3.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:variant3"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Center" Margin="0,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,168,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="286,117,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="266,164,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Login" Content="Log in" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="30" Width="104" Click="Login_Click"/>
        <Button x:Name="Register" Content="Registration" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Width="104" Click="Register_Click"/>
        <Button Content="Выход" x:Name="btnExit" HorizontalAlignment="Left" Margin="49,38,0,0" VerticalAlignment="Top" Width="104" Click="Exit_Click"/>
    </Grid>
</Window>
